<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_diary"
    tools:context=".DiaryActivity"
    style="@style/background_style">
    <RelativeLayout
        style="@style/header_style">
        <TextView
            style="@style/header_text"
            android:text = "Дневник">
        </TextView>
        <Button
            style="@style/header_button"
            android:id="@+id/from_diary_to_menu"
            android:text="В Меню">
        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:id="@+id/diary_left_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diary_weekday"
            android:text="Пятница"
            android:textColor="@color/my_text_color"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diary_weekday"
            android:layout_centerHorizontal="true"
            android:text="25.12.2015"
            android:id="@+id/diary_set_date"
            android:textColor="@color/my_text_color"
            android:inputType="date"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/right_arrow"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:id="@+id/diary_right_arrow"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TableRow>
                    <TextView
                        android:text="Получено"
                        style="@style/diary_table"/>
                    <TextView
                        android:text="Потрачено"
                        style="@style/diary_table"/>
                    <TextView
                        android:text="Дефицит"
                        style="@style/diary_table"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="875 Ккал"
                        android:gravity="center"
                        android:id="@+id/diary_calorie_get"
                        style="@style/diary_table"/>
                    <TextView
                        android:text="875 Ккал"
                        android:gravity="center"
                        android:id="@+id/diary_calorie_spend"
                        style="@style/diary_table"/>
                    <TextView
                        android:text="875 Ккал"
                        android:gravity="center"
                        android:id="@+id/diary_calorie_need"
                        style="@style/diary_table"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="30dp">
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/add_dish3"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:id="@+id/diary_dish_add_button"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_exercise3"
                    android:background="@null"
                    android:id="@+id/diary_exercise_add_button"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/diary_dishes_view_button"
                    android:text="Еда"
                    android:onClick="onViewDayDishes"
                    android:textColor="@color/my_text_color"
                    android:textAllCaps="false"
                    android:background="@color/my_header_color"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/diary_exercises_view_button"
                    android:text="Упражнения"
                    android:onClick="onViewDayExercises"
                    android:textColor="@color/my_text_color"
                    android:textAllCaps="false"
                    android:background="@color/my_header_color"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="@color/my_text_color"
                android:layout_gravity="center_horizontal"
                android:text="Заметки"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:hint="Ваши заметки"
                android:textSize="14dp"
                android:textColor="@color/my_text_color"
                android:textColorHint="@color/my_text_color"
                android:id="@+id/diary_record"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
